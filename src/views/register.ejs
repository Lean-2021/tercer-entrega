                    <input type="text"placeholder="Ingrese el nombre"class="form-control text-center"id="nombre"name="nombre"required>
                    <label for="email" class="form-label mt-3">Email</label>
                    <input type="text"placeholder="Ingrese el email" id="email"name="email"required class="form-control text-center"autocomplete="off">
                    <label for="password"class="form-label mt-3">Contrase침a</label>
                    <input type="password"class="form-control text-center"placeholder="Ingrese la contrase침a"id="password"name="password"required>
                    <label for="adress"class="form-label mt-3">Direcci칩n</label>
                    <input type="text"placeholder="Ingrese la direccion"id="adress"name="adress"class="form-control text-center"required>
                    <label for="age"class="form-label mt-3">Edad</label>
                    <input type="number"placeholder="Ingrese la edad"id="age"name="age"class="form-control text-center"required>
                    <label for="phone"class="form-label mt-3">Telefono (c칩digo de area y Pais)</label>
                    <input type="number"placeholder="54911223334455"id="phone"name="phone"class="form-control text-center"required>
