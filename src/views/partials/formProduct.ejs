<h3 class="form-title text-center mt-4">Centro de Mensajes</h3>
<form class="form-style" id="formChat">
    <label for="email"class="mt-2 form-label">Email</label>
    <input type="email" name="email" id="email"placeholder="Ingrese el email"class="form-control mt-2 text-center form-input"required>
    <label for="nombre" class="form-label mt-3">Nombre</label>
    <input type="text" name="nombre"class="form-control form-input" placeholder="Ingrese el nombre" required
        autocomplete="off" id="nombre">
    <label for="apellido" class="form-label mt-3">Apellido</label>
    <input type="text" name="apellido"class="form-control form-input" placeholder="Ingrese el apellido" required id="apellido">
    <label for="edad"class="form-label mt-3">Edad</label>
    <input type="number" id="edad"name="edad" required class="form-control form-input"placeholder="Ingrese la edad">
    <label for="alias"class="form-label mt-3">Alias</label>
    <input type="text" id="alias"name="alias" required class="form-control form-input"placeholder="Ingrese el alias">
    <label for="avatar"class="form-label mt-3">Imagen - Avatar</label>
    <input type="text" id="avatar"name="avatar" required class="form-control mb-4 form-input"placeholder="Ingrese la URL de la imagen">
    <div class="container mt-4">
        <hr>
        <div class="row">
            <div class="col-md-12 text-center chat-container">
                <section id="showMessage"class="mt-4 text-start form-control"></section>
                <hr>
                <div class="row mt-4 message-input">
                    <div class="col-md-10">
                        <input type="text"class="form-control"name="text" class="text-center" id="text"placeholder="Escriba el mensaje..."required>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-secondary ms-3">Enviar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>